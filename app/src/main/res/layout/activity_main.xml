<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonGeri"
        android:layout_width="105dp"
        android:layout_height="59dp"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="67dp"
        android:onClick="geriGelme"
        android:text="Geri"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonIleri"
        android:layout_width="109dp"
        android:layout_height="68dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="67dp"
        android:onClick="ileriGitme"
        android:text="Ä°leri"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageViewGorsel"
        android:layout_width="0dp"
        android:layout_height="279dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textViewBilgi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:scrollbarSize="24dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/imageViewGorsel"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGorsel" />

</androidx.constraintlayout.widget.ConstraintLayout>